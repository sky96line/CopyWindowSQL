<Window x:Class="CopyWindowSQL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:CopyWindowSQL"
        mc:Ignorable="d"
        Title="MainWindow" Height="365" Width="350" 
        WindowStartupLocation="Manual"
        WindowStyle="None"
        ResizeMode="NoResize"
        
        ShowActivated="False"
        ShowInTaskbar="False"
        AllowsTransparency="True"
        Background="Transparent"
        x:Name="main_Window">

    <Window.InputBindings>
        <KeyBinding Modifiers="Ctrl" Key="P" Command="{Binding Path=ChangeDatabaseCommand}" />
        <KeyBinding Modifiers="Ctrl" Key="Q" Command="{Binding Path=ExitCommand}" />
        <KeyBinding Key="Esc" Command="{Binding Path=HideWindowCommand}" CommandParameter="{Binding ElementName=main_Window}" />
    </Window.InputBindings>

    <Window.Resources>
        <Style x:Key="myTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0 5 0 0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Foreground" Value="#FFF" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="BorderThickness" Value="0"/>

            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="Transparent" />
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="Transparent" />
                </Trigger>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="BorderBrush" Value="Transparent" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="myDataGridCell" TargetType="DataGridCell">
            <Setter Property="BorderBrush" Value="Transparent" />

            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFAE00" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="FontWeight" Value="Bold" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="myDataGrid" TargetType="DataGrid">
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="RowHeight" Value="25" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="RowBackground" Value="Transparent" />
            <Setter Property="GridLinesVisibility" Value="None" />
            <Setter Property="AutoGenerateColumns" Value="False" />
            <Setter Property="EnableRowVirtualization" Value="True" />
            <Setter Property="EnableColumnVirtualization" Value="False" />
            <Setter Property="AllowDrop" Value="False" />
            <Setter Property="CanUserAddRows" Value="False" />
            <Setter Property="CanUserDeleteRows" Value="False" />
            <Setter Property="CanUserResizeRows" Value="False" />
            <Setter Property="CanUserResizeColumns" Value="False" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="IsSynchronizedWithCurrentItem" Value="True" />
            <Setter Property="RowHeaderWidth" Value="0" />
            <Setter Property="ColumnHeaderHeight" Value="0" />
            <Setter Property="HorizontalScrollBarVisibility" Value="Disabled" />
            <Setter Property="VerticalScrollBarVisibility" Value="Disabled" />
            <Setter Property="Foreground" Value="White" />
            
            <Setter Property="CellStyle" Value="{StaticResource myDataGridCell}"/>
        </Style>

        <Style x:Key="myLabel" TargetType="Label">
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0" />
        </Style>
    </Window.Resources>

    <Border CornerRadius="5" BorderBrush="#FFAA00" BorderThickness="2" Padding="2" Background="#26282A">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>


            <TextBox x:Name="SearchBox_txt" Style="{StaticResource myTextBox}"
                    CaretBrush="White"
                    Text="{Binding TextBox, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Grid.Row="0" Grid.Column="0">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="TextChanged">
                        <i:InvokeCommandAction Command="{Binding SearchDatabaseCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>

                <TextBox.InputBindings>
                    <KeyBinding Key="Up" Command="{Binding Path=NavigationUpCommand}" CommandParameter="{Binding ElementName=dg_source, Path=SelectedIndex}"/>
                    <KeyBinding Key="Down" Command="{Binding Path=NavigationDownCommand}" CommandParameter="{Binding ElementName=dg_source, Path=SelectedIndex}" />
                    <KeyBinding Key="Return" Command="{Binding Path=SelectionCommand}" CommandParameter="{Binding ElementName=main_Window}" />
                </TextBox.InputBindings>

            </TextBox>

            <DataGrid x:Name="dg_source"
                  Grid.Row="1" Grid.Column="0"
                  ItemsSource="{Binding DatabaseObjects}"
                  SelectedIndex="{Binding SelectedIndex}"
                      SelectionChanged="dg_source_SelectionChanged"
                  Style="{StaticResource myDataGrid}">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" Padding="0" Margin="5 0" TextAlignment="Left" VerticalAlignment="Center" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="25">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Type}" Padding="0" Margin="5 0" TextAlignment="Left" VerticalAlignment="Center" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>


            <StackPanel Grid.Row="3" Background="#FFAA00">
                <TextBlock Text="{Binding DM.CurrentConnection, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" FontWeight="Bold" Padding="5 0" VerticalAlignment="Center"></TextBlock>
            </StackPanel>

        </Grid>
    </Border>

</Window>
